@using HairdressingSalon.Web.ViewModels.Appointments
@model IList<AppointmentViewModel>

@{
    <h4>Last month's appointments</h4>
    if (Model?.Any() == true)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => x[i].CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x[i].ServiceName)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x[i].DateTime)
                            (Duration @Html.DisplayFor(x => x[i].ServiceDuration))
                        </td>
                        <td>
                            @Html.DisplayFor(x => x[i].Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There is no appointment</p>
    }
}
